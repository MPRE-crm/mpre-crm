{
  "compilerOptions": {
    "baseUrl": ".", 
    "paths": {
      "@/*": ["crm-project/crm/*"],
      "@components/*": ["crm-project/crm/components/*"],
      "@lib/*": ["crm-project/crm/lib/*"]
    },
    "types": ["react", "react-dom"],
    "typeRoots": ["node_modules/@types"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "ES2017",
    "lib": ["dom", "esnext"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "crm-project/crm/**/*",
    "next-env.d.ts",
    "node_modules/@types",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}


